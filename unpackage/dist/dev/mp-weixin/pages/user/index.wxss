
.top-area {
	position: relative;
}
.top-area-bg {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 0;
}
.top-area-body {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 200rpx;

	padding: 0rpx 30rpx 40rpx 30rpx;




	background-attachment: fixed;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	z-index: 1;
}
.info-wrapper {
	color: #FFFFFF;
}
.setting {
	position: absolute;
	top: 8rpx;
	right: 8rpx;
	width: 48rpx;
	height: 48rpx;
}
.nick-name {
	font-size: 22px;
	font-weight: bold;
}
.jumper-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 180rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}

