/* 搜索框 */
.search-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: fixed;
	top: 0;
	padding: 0 20rpx 20rpx;



	z-index: 999;
	background-color: #f8f8f8;
}
.search-ico-wrapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 0 10rpx;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-color: #eaeaea;
}
.search-ico{
	width: 28rpx;
	height: 28rpx;
}
.search-input{
	width: 650rpx;
	height: 60rpx;
	font-size: 14px;
	background-color: #eaeaea;
}
/* 搜索框-end */
/* 电影列表 */
.movie-list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row wrap;
	        flex-flow: row wrap;
	padding-bottom: constant(safe-area-inset-bottom);
	padding-bottom: env(safe-area-inset-bottom);

	padding: 120rpx 10rpx 0;
}
.movie-item{
	width: 200rpx;
	margin: 0 20rpx 10rpx;
}
.movie-item-poster{
	display: inline-block;
	width: 200rpx;
	height: 270rpx;
	padding: 0;
}
.movie-item-title{
	font-size: 12px;
	font-weight: bold;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 电影列表-end */

