.carousel {
	width: 100%;
	height: 440rpx;
}
.carousel uni-image,
.carousel image {
	width: 100%;
	height: 100%;
}
.swiper-item{
	height: 100%;
}

/* 热门 */
.hot {
	width: 100%;
	white-space: nowrap;
}
.single-poster {
	display: inline-block;
	margin-left: 20rpx;
}
.single-poster:last-child {
	margin-right: 20rpx;
}
.single-poster-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
}
.single-poster-pic {
	width: 200rpx;
	height: 270rpx;
}
.single-poster-label {
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 14px;
	font-weight: bold;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

/* 热门 end */

/* 热门预告 */
.hot-preview {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 0 10rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row wrap;
	        flex-flow: row wrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.hot-preview-video {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 240rpx;
}
.hot-preview-video:first-child {
	margin-right: 10rpx;
}

