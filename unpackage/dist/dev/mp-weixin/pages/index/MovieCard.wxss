
.movie-card {
	position: relative;
	width: 100%;
	margin-bottom: 10rpx;
}
.movie-card-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.movie-card-cover {
	width: 240rpx;
	height: 260rpx;
	margin: 0 10rpx;
	-webkit-border-radius: 12rpx;
	        border-radius: 12rpx;
}
.movie-card-title {
	font-size: 18px;
	font-weight: bold;
}
.movie-card-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
}
.movie-card-text {
	color: #999999;
}
.movie-card-like {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 0;
	width: 185rpx;
	color: #ffbc00;
	font-size: 14px;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column;
	        flex-flow: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-border-radius: 0px;
	        border-radius: 0px;
	background-color: transparent;
}
uni-button:after,button:after {
	position: absolute;
	top:50%;
	left: 10rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 1px;
	height: 80%;
	content: "";
	border: none;
	background-color: #efefef;
}
.like-icon {
	width: 30px;
	height: 30px;
}

